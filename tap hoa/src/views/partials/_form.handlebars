<form method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Your Name">
        </div>
        <div class="form-group">
            <label for="mail" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="examples@gmail.com">
        </div>

        <div class="form-group">
            <label for="number" class="text-light">Phone Number</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="number" value="" placeholder="Your Phone Number">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="checkbox" id="gender" value="Male">
                <label for="gender" class="checkbox label">Male</label>
            </div>
            <div class="radio inline">
                <input type="checkbox" name="gender" value="Male">
                <label for="gender" class="checkbox lable">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="activities" class="text-light">Status</label>
            <div class="radio inline">
                <input type="checkbox" name="status" value="Active">
                <label for="activities" class="checkbox label">Active</label>
            </div>
            <div class="radio inline">
                <input type="checkbox" name="status" value="Inactive">
                <label for="activities" class="checkbox label">Inactive</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
    </div>
</form>